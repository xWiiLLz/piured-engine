{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src/",
        "outDir": "./dist",
        "allowJs": true,
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "module": "commonjs",
        "noEmitOnError": false,
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["dom", "es2019"],
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "exclude": ["dist", "node_modules"],
    "include": ["./src"]
}
