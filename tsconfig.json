{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "module": "commonjs",
        // "baseUrl": ".",
        "rootDir": "src/",
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "noEmitOnError": false,
        "moduleResolution": "node",
        "lib": ["dom", "es2019"]
        // "paths": {
        //     "@src/*": ["./src/*"]
        // }
    },
    "exclude": ["dist", "node_modules"],
    "include": ["./src"]
}
